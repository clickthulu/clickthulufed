{% extends 'base.html.twig' %}

{% block title %}{{ app.user.username }}'s Profile'{% endblock %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col">
                <div class="row border-bottom mb-3">
                    <h3><i class="fas fa-user"></i> Profile</h3>
                </div>
                <div class="row border-bottom mb-3 pb-2">
                    <div class="col-3 text-center">
                        {% if app.user.image is defined %}
                            <img src="{{ app.user.image }}" alt="{{ app.user.username }}" class="img-fluid"/><br/>
                        {% endif %}
                        {% if app.user.name %}
                            <strong>{{ app.user.name }}</strong><br/>
                        {% else %}
                            <strong>{{ app.user.username }}</strong><br/>
                        {% endif %}
                        <small>@{{ app.user.username }}@{{ settings.get.server_url }}</small>
                    </div>
                    <div class="col">
                        <div class="row mb-3">
                            <div class="col">
                                {{ app.user.biography }}
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                User stats - # comics, # pages, # comments
                            </div>
                        </div>
                    </div>
                    <div class="col-2">
                        <a href="/profile/edit" type="button" class="btn-light btn"><i class="fas fa-edit"></i> Edit Profile</a>
                    </div>
                </div>

                <div class="row">
                    <div class="col panel p-3">
                        <div class="row mb-3">
                            <div class="col">
                                <h3><i class="fas fa-book"></i> My Comics</h3>
                            </div>
                        </div>
                        {% if app.user.comics|length == 0 %}
                            <div class="row mb-3">
                                <div class="col">
                                    <h4>No comics listed</h4>
                                </div>
                            </div>
                        {% else %}
                            {% for comic in app.user.comics %}
                                {% include "content/profile_comic_block.html.twig" with { comic: comic, settings:settings } %}
                            {% endfor %}
                        {% endif %}
                    </div>
                </div>
            </div>

        </div>
    </div>
{% endblock %}

{% block sidebar %}
    {% include "user-sidebar.html.twig" %}
{% endblock %}