<div class="col mt-5 panel p-3">
    <ul class="nav flex-column">
        <h5>Welcome {{ app.user.username }}</h5>
        <li class="nav-item"><a href="/" class="nav-link"><i class="fas fa-home"></i> Home</a></li>
        <li class="nav-item"><a href="/profile" class="nav-link"><i class="fas fa-user"></i> Profile</a></li>
        <li class="nav-item"><a href="/feed" class="nav-link"><i class="fas fa-book-bookmark"></i> Feed</a></li>
        {% if is_granted('ROLE_CREATOR') %}
            <li class="nav-item"><a href="/create" class="nav-link"><i class="fas fa-book"></i> Create New Comic</a></li>
        {% endif %}

        {% if is_granted('ROLE_OWNER') %}
            <hr/>
            <h5>Server Management</h5>
            <li class="nav-item"><a href="/server/manage" class="nav-link"><i class="fas fa-gear"></i> Server Settings</a> </li>
        {% endif %}

        {% if is_granted('ROLE_OWNER') or is_granted('ROLE_ADMIN') %}
            <hr/>
            <h5>Administration</h5>
            <li class="nav-item"><a href="/admin/comics" class="nav-link">
                        <span class="fa-layers fa-fw">
                            <i class="fas fa-stamp"></i>
                            <span class="bg-danger fa-layers-text badge" data-fa-transform="shrink-4 up-6 left-12">{{ adminalerts.getComicAlert }}</span>
                        </span>
                    Comics</a> </li>
            <li class="nav-item"><a href="/admin/users" class="nav-link"><i class="fas fa-users"></i> Users</a> </li>
        {% endif %}


        {% if is_granted('ROLE_CREATOR') %}
            <hr/>
            <h5>Comic Management</h5>
            {% for comic in app.user.comics %}
                <li class="nav-item"><a href="/comic/manage/{{ comic.slug }}" class="nav-link"><i class="fas fa-toolbox"></i> Manage {{ comic.name }}</a></li>
            {% endfor %}
        {% endif %}


        <hr/>
        <li class="nav-item"><a href="/logout" class="nav-link"><i class="fas fa-right-from-bracket"></i> Logout</a></li>

    </ul>
</div>